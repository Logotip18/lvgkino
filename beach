    <!-- –ú–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ —Å—Ö–µ–º—ã –∑–∞–ª–∞ -->
    <div id="hallSchemeModal" class="hall-modal">
        <div class="hall-modal-content">
            <span class="hall-modal-close" onclick="closeHallSchemeModal()">&times;</span>
            <div class="hall-modal-header">
                <h2>–°—Ö–µ–º–∞ –∑–∞–ª–∞</h2>
                <p id="hallModalInfo"></p>
            </div>
            <div id="hallSchemeContainer"></div>
        </div>
    </div>
    <!-- –ú–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–∏ -->
    <div id="bookingInfoModal" class="booking-info-modal">
        <div class="booking-info-modal-content">
            <span class="booking-info-modal-close" onclick="closeBookingInfoModal()">&times;</span>
            <h3>–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–∏</h3>
            <div id="bookingInfoContent"></div>
        </div>
    </div>
    <script>
        // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏
        if (localStorage.getItem('adminLoggedIn') !== 'true') {
            window.location.href = 'admin.html';
        }
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Firebase
        const firebaseConfig = {
            apiKey: "AIzaSyDeX86T2r1K0LRMEyk3UdUF68bfYiTwjiw",
            authDomain: "lvgkino.firebaseapp.com",
            projectId: "lvgkino",
            storageBucket: "lvgkino.firebasestorage.app",
            messagingSenderId: "526810546839",
            appId: "1:526810546839:web:aaf02cb3a91b31cd311fd2"
        };
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();
        // –ì–ª–æ–±–∞–ª—å–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –¥–ª—è —Ñ–∏–ª—å—Ç—Ä–æ–≤
        let currentBookingFilter = 'all';
        let currentSeanceFilter = 'all';
        let allSeances = []; // –ö—ç—à —Å–µ–∞–Ω—Å–æ–≤ –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ —Å—É—â–µ—Å—Ç–≤–æ–≤–∞–Ω–∏—è
        // –ì–ª–æ–±–∞–ª—å–Ω–∞—è –ø–µ—Ä–µ–º–µ–Ω–Ω–∞—è –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è ID –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è, –ø–æ –∫–æ—Ç–æ—Ä–æ–º—É –æ—Ç–∫—Ä—ã–ª–∏ —Å—Ö–µ–º—É
        let currentHighlightedBookingId = null;

        // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Å–µ–≥–æ–¥–Ω—è—à–Ω—é—é –¥–∞—Ç—É –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const dateString = today.toISOString().split('T')[0];
            document.getElementById('seanceDate').value = dateString;
            loadMovies();
            loadSeances();
            loadAllSeances(); // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å–µ–∞–Ω—Å—ã –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–π
            // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∑–∞–≥—Ä—É–∂–∞–µ–º –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –ø—Ä–∏ –≤—Ö–æ–¥–µ
            loadActiveBookings(currentBookingFilter);
            loadArchiveBookings();
        });

        function logout() {
            localStorage.removeItem('adminLoggedIn');
            window.location.href = 'admin.html';
        }

        function showSection(sectionId) {
            // –°–∫—Ä—ã–≤–∞–µ–º –≤—Å–µ —Å–µ–∫—Ü–∏–∏
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –≤—ã–±—Ä–∞–Ω–Ω—É—é —Å–µ–∫—Ü–∏—é
            const sectionElement = document.getElementById(sectionId);
            if (sectionElement) {
                 sectionElement.classList.add('active');
            }
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–∞–Ω–Ω—ã–µ –¥–ª—è –∞–∫—Ç–∏–≤–Ω–æ–π —Å–µ–∫—Ü–∏–∏
            if (sectionId === 'movies') {
                loadMovies();
            } else if (sectionId === 'seances') {
                loadSeances(currentSeanceFilter);
            } else if (sectionId === 'bookings') {
                // –ë—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è —É–∂–µ –∑–∞–≥—Ä—É–∂–µ–Ω—ã –ø—Ä–∏ –≤—Ö–æ–¥–µ, –ø—Ä–æ—Å—Ç–æ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–µ–∫—Ü–∏—é
            }
        }

        // –ù–∞–≤–∏–≥–∞—Ü–∏—è –ø–æ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è–º
        function filterBookings(filter) {
            // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–µ –∫–Ω–æ–ø–∫–∏
            document.querySelectorAll('#bookings .nav-button').forEach(btn => {
                btn.classList.remove('active');
            });
            const filterButton = document.getElementById(filter + 'Btn');
            if (filterButton) {
                filterButton.classList.add('active');
            }
            currentBookingFilter = filter;
            loadActiveBookings(filter);
        }

        // –ù–∞–≤–∏–≥–∞—Ü–∏—è –ø–æ —Å–µ–∞–Ω—Å–∞–º
        function filterSeances(filter) {
            // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–µ –∫–Ω–æ–ø–∫–∏
            document.querySelectorAll('#seances .nav-button').forEach(btn => {
                btn.classList.remove('active');
            });
            const filterButton = document.getElementById(filter + 'SeancesBtn');
            if (filterButton) {
                filterButton.classList.add('active');
            }
            currentSeanceFilter = filter;
            loadSeances(filter);
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –≤—Å–µ—Ö —Å–µ–∞–Ω—Å–æ–≤ –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ —Å—É—â–µ—Å—Ç–≤–æ–≤–∞–Ω–∏—è
        async function loadAllSeances() {
            try {
                const querySnapshot = await db.collection('seances').get();
                allSeances = [];
                querySnapshot.forEach((doc) => {
                    const seance = doc.data();
                    if (seance.movie && seance.date && seance.time) {
                        allSeances.push({
                            id: doc.id,
                            ...seance
                        });
                    }
                });
                return allSeances;
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–µ–∞–Ω—Å–æ–≤ –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏:', error);
                return [];
            }
        }

        // --- –ò—Å–ø—Ä–∞–≤–ª–µ–Ω–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è seanceExists ---
        // –ü—Ä–æ–≤–µ—Ä–∫–∞, —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–∏ —Å–µ–∞–Ω—Å –∏ –Ω–µ –ø—Ä–æ—à–ª–∞ –ª–∏ –µ–≥–æ –¥–∞—Ç–∞
        function seanceExists(film, date, time) {
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–∏ —Å–µ–∞–Ω—Å —Å —Ç–∞–∫–∏–º–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏
            const exists = allSeances.some(seance =>
                seance.movie === film &&
                seance.date === date &&
                seance.time === time
            );

            if (!exists) {
                // –ï—Å–ª–∏ —Å–µ–∞–Ω—Å –Ω–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –≤ —Å–ø–∏—Å–∫–µ, —Å—á–∏—Ç–∞–µ–º –µ–≥–æ –∞—Ä—Ö–∏–≤–Ω—ã–º
                return false;
            }

            // –ï—Å–ª–∏ —Å–µ–∞–Ω—Å —Å—É—â–µ—Å—Ç–≤—É–µ—Ç, –ø—Ä–æ–≤–µ—Ä—è–µ–º –¥–∞—Ç—É
            try {
                // –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â—É—é –¥–∞—Ç—É –±–µ–∑ –≤—Ä–µ–º–µ–Ω–∏
                const today = new Date();
                today.setHours(0, 0, 0, 0);

                // –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º —Å—Ç—Ä–æ–∫—É –¥–∞—Ç—ã —Å–µ–∞–Ω—Å–∞ –≤ –æ–±—ä–µ–∫—Ç Date
                // –ü—Ä–µ–¥–ø–æ–ª–∞–≥–∞–µ–º, —á—Ç–æ —Ñ–æ—Ä–º–∞—Ç date - 'YYYY-MM-DD'
                const [year, month, day] = date.split('-').map(Number);
                const seanceDate = new Date(year, month - 1, day); // –ú–µ—Å—è—Ü—ã –≤ JS 0-11

                // –°—Ä–∞–≤–Ω–∏–≤–∞–µ–º –¥–∞—Ç—ã
                // –ï—Å–ª–∏ –¥–∞—Ç–∞ —Å–µ–∞–Ω—Å–∞ —Ä–∞–Ω—å—à–µ —Å–µ–≥–æ–¥–Ω—è—à–Ω–µ–π, —Ç–æ –æ–Ω –ø—Ä–æ—à—ë–ª –∏ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –∞—Ä—Ö–∏–≤–Ω—ã–µ
                if (seanceDate < today) {
                    return false; // –°—á–∏—Ç–∞–µ–º –∞—Ä—Ö–∏–≤–Ω—ã–º, –¥–∞–∂–µ –µ—Å–ª–∏ –¥–æ–∫—É–º–µ–Ω—Ç —Å—É—â–µ—Å—Ç–≤—É–µ—Ç
                } else {
                    return true; // –ê–∫—Ç–∏–≤–Ω—ã–π
                }
            } catch (e) {
                console.error("–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–∞—Ä—Å–∏–Ω–≥–µ –¥–∞—Ç—ã —Å–µ–∞–Ω—Å–∞ –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ –∞–∫—Ç—É–∞–ª—å–Ω–æ—Å—Ç–∏:", date, e);
                // –í —Å–ª—É—á–∞–µ –æ—à–∏–±–∫–∏ –ª—É—á—à–µ –ø–µ—Ä–µ—Å—Ç—Ä–∞—Ö–æ–≤–∞—Ç—å—Å—è –∏ —Å—á–∏—Ç–∞—Ç—å —Å—É—â–µ—Å—Ç–≤—É—é—â–∏–π —Å–µ–∞–Ω—Å –∞–∫—Ç–∏–≤–Ω—ã–º
                return true;
            }
        }
        // --- –ö–æ–Ω–µ—Ü –∏—Å–ø—Ä–∞–≤–ª–µ–Ω–Ω–æ–π —Ñ—É–Ω–∫—Ü–∏–∏ seanceExists ---

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Ñ–∏–ª—å–º–æ–≤
        async function loadMovies() {
            try {
                const moviesLoadingElement = document.getElementById('moviesLoading');
                const moviesTableWrapper = document.querySelector('#movies .table-wrapper');
                const moviesTableElement = moviesTableWrapper ? moviesTableWrapper.querySelector('table') : null;

                if (moviesLoadingElement) {
                    moviesLoadingElement.style.display = 'block';
                }
                if (moviesTableElement) {
                    moviesTableElement.style.display = 'none';
                }

                const querySnapshot = await db.collection('movies').get();
                const moviesTableBody = document.getElementById('moviesTableBody');
                if (!moviesTableBody) {
                     console.error("–≠–ª–µ–º–µ–Ω—Ç —Å id 'moviesTableBody' –Ω–µ –Ω–∞–π–¥–µ–Ω");
                     return;
                }
                moviesTableBody.innerHTML = '';
                querySnapshot.forEach((doc) => {
                    const movie = doc.data();
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${movie.name}</td>
                        <td>${movie.description}</td>
                        <td>${movie.age}</td>
                        <td><button style="background: #ff6b6b; padding: 5px 10px; font-size: 0.8rem;" onclick="deleteMovie('${doc.id}')">–£–¥–∞–ª–∏—Ç—å</button></td>
                    `;
                    moviesTableBody.appendChild(row);
                });
                // –û–±–Ω–æ–≤–ª—è–µ–º —Å–µ–ª–µ–∫—Ç —Å–µ–∞–Ω—Å–æ–≤
                updateSeanceSelect();

                if (moviesLoadingElement) {
                    moviesLoadingElement.style.display = 'none';
                }
                if (moviesTableElement) {
                    moviesTableElement.style.display = 'table';
                }
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ñ–∏–ª—å–º–æ–≤:', error);
                const moviesLoadingElement = document.getElementById('moviesLoading');
                if (moviesLoadingElement) {
                    moviesLoadingElement.innerHTML = '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏';
                }
            }
        }

        // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Ñ–∏–ª—å–º–∞
        async function addMovie() {
            const name = document.getElementById('movieName').value;
            const desc = document.getElementById('movieDesc').value;
            const age = document.getElementById('movieAge').value;
            // –°–∫—Ä—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏—è
            const movieSuccessElement = document.getElementById('movieSuccess');
            const movieErrorElement = document.getElementById('movieError');
            if (movieSuccessElement) movieSuccessElement.style.display = 'none';
            if (movieErrorElement) movieErrorElement.style.display = 'none';

            if (name && desc) {
                try {
                    await db.collection('movies').add({
                        name: name,
                        description: desc,
                        age: age,
                        createdAt: firebase.firestore.FieldValue.serverTimestamp()
                    });
                    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –æ–± —É—Å–ø–µ—Ö–µ
                    if (movieSuccessElement) {
                        movieSuccessElement.style.display = 'block';
                        setTimeout(() => {
                            movieSuccessElement.style.display = 'none';
                        }, 3000);
                    }
                    // –û—á–∏—â–∞–µ–º –ø–æ–ª—è
                    const movieNameInput = document.getElementById('movieName');
                    const movieDescInput = document.getElementById('movieDesc');
                    if (movieNameInput) movieNameInput.value = '';
                    if (movieDescInput) movieDescInput.value = '';
                    // –ü–µ—Ä–µ–∑–∞–≥—Ä—É–∂–∞–µ–º —Å–ø–∏—Å–æ–∫ —Ñ–∏–ª—å–º–æ–≤
                    loadMovies();
                } catch (error) {
                    console.error('–û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Ñ–∏–ª—å–º–∞:', error);
                    alert('–û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Ñ–∏–ª—å–º–∞: ' + error.message); // –ë–æ–ª–µ–µ —Ç–æ—á–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
                }
            } else {
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –æ—à–∏–±–∫—É
                if (movieErrorElement) {
                    movieErrorElement.style.display = 'block';
                    setTimeout(() => {
                        movieErrorElement.style.display = 'none';
                    }, 3000);
                }
            }
        }

        // –£–¥–∞–ª–µ–Ω–∏–µ —Ñ–∏–ª—å–º–∞
        async function deleteMovie(movieId) {
            if (confirm('–£–¥–∞–ª–∏—Ç—å —Ñ–∏–ª—å–º?')) {
                try {
                    await db.collection('movies').doc(movieId).delete();
                    loadMovies();
                    alert('–§–∏–ª—å–º —É–¥–∞–ª–µ–Ω!');
                } catch (error) {
                    console.error('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è —Ñ–∏–ª—å–º–∞:', error);
                    alert('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è —Ñ–∏–ª—å–º–∞: ' + error.message); // –ë–æ–ª–µ–µ —Ç–æ—á–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
                }
            }
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å–µ–ª–µ–∫—Ç–∞ —Å–µ–∞–Ω—Å–æ–≤
        async function updateSeanceSelect() {
            try {
                const seanceSelect = document.getElementById('seanceMovie');
                if (!seanceSelect) {
                     console.error("–≠–ª–µ–º–µ–Ω—Ç —Å id 'seanceMovie' –Ω–µ –Ω–∞–π–¥–µ–Ω");
                     return;
                }
                seanceSelect.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ —Ñ–∏–ª—å–º</option>';
                const querySnapshot = await db.collection('movies')
                    .orderBy('name')
                    .get();
                querySnapshot.forEach((doc) => {
                    const movie = doc.data();
                    const option = document.createElement('option');
                    option.value = movie.name;
                    option.textContent = movie.name;
                    seanceSelect.appendChild(option);
                });
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å–µ–ª–µ–∫—Ç–∞:', error);
            }
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–µ–∞–Ω—Å–æ–≤ —Å —Ñ–∏–ª—å—Ç—Ä–∞—Ü–∏–µ–π
        async function loadSeances(filter = 'all') {
            try {
                const seancesLoadingElement = document.getElementById('seancesLoading');
                const seancesTableWrapper = document.querySelector('#seances .table-wrapper');
                const seancesTableElement = seancesTableWrapper ? seancesTableWrapper.querySelector('table') : null;

                if (seancesLoadingElement) {
                    seancesLoadingElement.style.display = 'block';
                }
                if (seancesTableElement) {
                    seancesTableElement.style.display = 'none';
                }

                // –ó–∞–≥—Ä—É–∂–∞–µ–º –≤—Å–µ —Å–µ–∞–Ω—Å—ã –∏ —Ñ–∏–ª—å—Ç—Ä—É–µ–º –Ω–∞ –∫–ª–∏–µ–Ω—Ç–µ
                const querySnapshot = await db.collection('seances').get();
                // –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º –≤ –º–∞—Å—Å–∏–≤ –¥–ª—è —É–¥–æ–±–Ω–æ–π —Ñ–∏–ª—å—Ç—Ä–∞—Ü–∏–∏
                const allSeances = [];
                querySnapshot.forEach((doc) => {
                    const seance = doc.data();
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ —É —Å–µ–∞–Ω—Å–∞ –µ—Å—Ç—å –≤—Å–µ –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –¥–∞–Ω–Ω—ã–µ
                    if (seance.movie && seance.date && seance.time) {
                        allSeances.push({
                            id: doc.id,
                            ...seance
                        });
                    }
                });
                // –§–∏–ª—å—Ç—Ä—É–µ–º –Ω–∞ –∫–ª–∏–µ–Ω—Ç–µ
                let filteredSeances = allSeances;
                const now = new Date();
                const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
                if (filter === 'today') {
                    const todayString = formatDateForComparison(today);
                    filteredSeances = allSeances.filter(seance => seance.date === todayString);
                } else if (filter === 'week') {
                    const nextWeek = new Date(today);
                    nextWeek.setDate(nextWeek.getDate() + 7);
                    const todayString = formatDateForComparison(today);
                    const nextWeekString = formatDateForComparison(nextWeek);
                    filteredSeances = allSeances.filter(seance =>
                        seance.date >= todayString && seance.date <= nextWeekString
                    );
                } else if (filter === 'future') {
                    const tomorrow = new Date(today);
                    tomorrow.setDate(tomorrow.getDate() + 1);
                    const tomorrowString = formatDateForComparison(tomorrow);
                    filteredSeances = allSeances.filter(seance => seance.date >= tomorrowString);
                }
                // –°–æ—Ä—Ç–∏—Ä—É–µ–º —Å –ø—Ä–æ–≤–µ—Ä–∫–æ–π –Ω–∞ undefined
                filteredSeances.sort((a, b) => {
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å—É—â–µ—Å—Ç–≤–æ–≤–∞–Ω–∏–µ –¥–∞—Ç
                    if (a.date && b.date) {
                        if (a.date !== b.date) {
                            return a.date.localeCompare(b.date);
                        }
                    }
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å—É—â–µ—Å—Ç–≤–æ–≤–∞–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏
                    if (a.time && b.time) {
                        return a.time.localeCompare(b.time);
                    }
                    return 0;
                });
                const seancesTableBody = document.getElementById('seancesTableBody');
                if (!seancesTableBody) {
                     console.error("–≠–ª–µ–º–µ–Ω—Ç —Å id 'seancesTableBody' –Ω–µ –Ω–∞–π–¥–µ–Ω");
                     return;
                }
                seancesTableBody.innerHTML = '';
                if (filteredSeances.length === 0) {
                    seancesTableBody.innerHTML = '<tr><td colspan="4" style="text-align: center;">–ù–µ—Ç —Å–µ–∞–Ω—Å–æ–≤</td></tr>';
                } else {
                    filteredSeances.forEach((seance) => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${seance.movie}</td>
                            <td>${seance.date}</td>
                            <td>${seance.time}</td>
                            <td><button style="background: #ff6b6b; padding: 5px 10px; font-size: 0.8rem;" onclick="deleteSeance('${seance.id}')">–£–¥–∞–ª–∏—Ç—å</button></td>
                        `;
                        seancesTableBody.appendChild(row);
                    });
                }

                if (seancesLoadingElement) {
                    seancesLoadingElement.style.display = 'none';
                }
                if (seancesTableElement) {
                    seancesTableElement.style.display = 'table';
                }
                // –û–±–Ω–æ–≤–ª—è–µ–º –∫—ç—à —Å–µ–∞–Ω—Å–æ–≤
                loadAllSeances();
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–µ–∞–Ω—Å–æ–≤:', error);
                const seancesLoadingElement = document.getElementById('seancesLoading');
                if (seancesLoadingElement) {
                    seancesLoadingElement.innerHTML = '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏: ' + error.message;
                }
            }
        }

        // –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –¥–∞—Ç—ã –¥–ª—è —Å—Ä–∞–≤–Ω–µ–Ω–∏—è (YYYY-MM-DD)
        function formatDateForComparison(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

        // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Å–µ–∞–Ω—Å–∞
        async function addSeance() {
            const movie = document.getElementById('seanceMovie').value;
            const date = document.getElementById('seanceDate').value;
            const time = document.getElementById('seanceTime').value;
            // –°–∫—Ä—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏—è
            const seanceSuccessElement = document.getElementById('seanceSuccess');
            const seanceErrorElement = document.getElementById('seanceError');
            if (seanceSuccessElement) seanceSuccessElement.style.display = 'none';
            if (seanceErrorElement) seanceErrorElement.style.display = 'none';

            if (movie && date && time) {
                try {
                    await db.collection('seances').add({
                        movie: movie,
                        date: date,
                        time: time,
                        createdAt: firebase.firestore.FieldValue.serverTimestamp()
                    });
                    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –æ–± —É—Å–ø–µ—Ö–µ
                    if (seanceSuccessElement) {
                        seanceSuccessElement.style.display = 'block';
                        setTimeout(() => {
                            seanceSuccessElement.style.display = 'none';
                        }, 3000);
                    }
                    // –û—á–∏—â–∞–µ–º –ø–æ–ª—è –≤—Ä–µ–º–µ–Ω–∏
                    const seanceTimeInput = document.getElementById('seanceTime');
                    if (seanceTimeInput) seanceTimeInput.value = '';
                    // –ü–µ—Ä–µ–∑–∞–≥—Ä—É–∂–∞–µ–º —Å–ø–∏—Å–æ–∫ —Å–µ–∞–Ω—Å–æ–≤
                    loadSeances(currentSeanceFilter);
                } catch (error) {
                    console.error('–û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Å–µ–∞–Ω—Å–∞:', error);
                    alert('–û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Å–µ–∞–Ω—Å–∞: ' + error.message); // –ë–æ–ª–µ–µ —Ç–æ—á–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
                }
            } else {
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –æ—à–∏–±–∫—É
                if (seanceErrorElement) {
                    seanceErrorElement.style.display = 'block';
                    setTimeout(() => {
                        seanceErrorElement.style.display = 'none';
                    }, 3000);
                }
            }
        }

        // –£–¥–∞–ª–µ–Ω–∏–µ —Å–µ–∞–Ω—Å–∞
        async function deleteSeance(seanceId) {
            if (confirm('–£–¥–∞–ª–∏—Ç—å —Å–µ–∞–Ω—Å?')) {
                try {
                    await db.collection('seances').doc(seanceId).delete();
                    loadSeances(currentSeanceFilter);
                    alert('–°–µ–∞–Ω—Å —É–¥–∞–ª–µ–Ω!');
                } catch (error) {
                    console.error('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è —Å–µ–∞–Ω—Å–∞:', error);
                    alert('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è —Å–µ–∞–Ω—Å–∞: ' + error.message); // –ë–æ–ª–µ–µ —Ç–æ—á–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
                }
            }
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –∞–∫—Ç–∏–≤–Ω—ã—Ö –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–π —Å —Ñ–∏–ª—å—Ç—Ä–∞—Ü–∏–µ–π
        async function loadActiveBookings(filter = 'all') {
            try {
                const activeBookingsLoadingElement = document.getElementById('activeBookingsLoading');
                const activeBookingsTableWrapper = document.querySelector('#bookings .table-wrapper');
                const activeBookingsTableElement = activeBookingsTableWrapper ? activeBookingsTableWrapper.querySelector('table') : null;

                if (activeBookingsLoadingElement) {
                    activeBookingsLoadingElement.style.display = 'block';
                }
                if (activeBookingsTableElement) {
                    activeBookingsTableElement.style.display = 'none';
                }

                // –û–±–Ω–æ–≤–ª—è–µ–º –∫—ç—à —Å–µ–∞–Ω—Å–æ–≤
                await loadAllSeances();
                // –ó–∞–≥—Ä—É–∂–∞–µ–º –≤—Å–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
                const querySnapshot = await db.collection('bookings').get();
                // –§–∏–ª—å—Ç—Ä—É–µ–º —Ç–æ–ª—å–∫–æ –∞–∫—Ç–∏–≤–Ω—ã–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è (—Å—É—â–µ—Å—Ç–≤—É—é—â–∏–µ —Å–µ–∞–Ω—Å—ã)
                const activeBookings = [];
                for (const doc of querySnapshot.docs) {
                    const booking = doc.data();
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ —É –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –µ—Å—Ç—å –≤—Å–µ –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –¥–∞–Ω–Ω—ã–µ
                    if (booking.film && booking.date && booking.time) {
                        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–∏ —Å–µ–∞–Ω—Å
                        if (seanceExists(booking.film, booking.date, booking.time)) {
                            activeBookings.push({
                                id: doc.id,
                                ...booking
                            });
                        }
                    }
                }
                // –§–∏–ª—å—Ç—Ä—É–µ–º –ø–æ –¥–∞—Ç–µ
                let filteredBookings = activeBookings;
                const now = new Date();
                const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
                if (filter === 'today') {
                    const todayString = formatDateForComparison(today);
                    filteredBookings = activeBookings.filter(booking => booking.date === todayString);
                } else if (filter === 'week') {
                    const nextWeek = new Date(today);
                    nextWeek.setDate(today.getDate() + 7);
                    const todayString = formatDateForComparison(today);
                    const nextWeekString = formatDateForComparison(nextWeek);
                    filteredBookings = activeBookings.filter(booking =>
                        booking.date >= todayString && booking.date <= nextWeekString
                    );
                }
                // –°–æ—Ä—Ç–∏—Ä—É–µ–º –ø–æ –¥–∞—Ç–µ –∏ –≤—Ä–µ–º–µ–Ω–∏
                filteredBookings.sort((a, b) => {
                    if (a.date !== b.date) {
                        return a.date.localeCompare(b.date);
                    }
                    if (a.time && b.time) {
                        return a.time.localeCompare(b.time);
                    }
                    return 0;
                });
                const bookingsTableBody = document.getElementById('activeBookingsTableBody');
                if (!bookingsTableBody) {
                     console.error("–≠–ª–µ–º–µ–Ω—Ç —Å id 'activeBookingsTableBody' –Ω–µ –Ω–∞–π–¥–µ–Ω");
                     return;
                }
                bookingsTableBody.innerHTML = '';
                if (filteredBookings.length === 0) {
                    bookingsTableBody.innerHTML = '<tr><td colspan="8" style="text-align: center;">–ù–µ—Ç –∞–∫—Ç–∏–≤–Ω—ã—Ö –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–π</td></tr>';
                } else {
                    filteredBookings.forEach(booking => {
                        // –°–æ–∑–¥–∞–µ–º —É–Ω–∏–∫–∞–ª—å–Ω—ã–π ID –¥–ª—è —Å—Ç—Ä–æ–∫–∏
                        const rowId = `booking-${booking.id}`;
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${booking.film || '---'}</td>
                            <td>${booking.date || '---'} ${booking.time || ''}</td>
                            <td>${booking.seat || '---'}</td>
                            <td>${booking.people || '---'}</td>
                            <td>${booking.price || 0} —Ä—É–±.</td>
                            <td>${booking.customerName || '---'}</td> <!-- –ù–û–í–´–ô –°–¢–û–õ–ë–ï–¶ -->
                            <td>${booking.customerPhone || '---'}</td> <!-- –ù–û–í–´–ô –°–¢–û–õ–ë–ï–¶ -->
                            <td>
                                <button class="delete-booking-btn" onclick="deleteBooking('${booking.id}', true)">–£–¥–∞–ª–∏—Ç—å</button>
                            </td>
                        `;
                        // –î–µ–ª–∞–µ–º —Å—Ç—Ä–æ–∫—É –∫–ª–∏–∫–∞–±–µ–ª—å–Ω–æ–π –∏ –ø–µ—Ä–µ–¥–∞–µ–º ID –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –¥–ª—è –≤—ã–¥–µ–ª–µ–Ω–∏—è
                        row.id = rowId;
                        row.style.cursor = 'pointer';
                        row.title = '–ö–ª–∏–∫–Ω–∏—Ç–µ –¥–ª—è –ø—Ä–æ—Å–º–æ—Ç—Ä–∞ —Å—Ö–µ–º—ã –∑–∞–ª–∞';
                        row.addEventListener('click', (e) => {
                            // –ò–≥–Ω–æ—Ä–∏—Ä—É–µ–º –∫–ª–∏–∫, –µ—Å–ª–∏ –æ–Ω –±—ã–ª –ø–æ –∫–Ω–æ–ø–∫–µ —É–¥–∞–ª–µ–Ω–∏—è
                            if (e.target.classList.contains('delete-booking-btn')) {
                                return;
                            }
                            // –ü–µ—Ä–µ–¥–∞–µ–º ID –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –¥–ª—è –≤—ã–¥–µ–ª–µ–Ω–∏—è –º–µ—Å—Ç–∞
                            showHallScheme(booking.film, booking.date, booking.time, booking.id);
                        });
                        bookingsTableBody.appendChild(row);
                    });
                }

                if (activeBookingsLoadingElement) {
                    activeBookingsLoadingElement.style.display = 'none';
                }
                if (activeBookingsTableElement) {
                    activeBookingsTableElement.style.display = 'table';
                }
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∞–∫—Ç–∏–≤–Ω—ã—Ö –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–π:', error);
                const activeBookingsLoadingElement = document.getElementById('activeBookingsLoading');
                if (activeBookingsLoadingElement) {
                    activeBookingsLoadingElement.innerHTML = '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏: ' + error.message;
                }
            }
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –∞—Ä—Ö–∏–≤–Ω—ã—Ö –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–π
        async function loadArchiveBookings() {
            try {
                const archiveBookingsLoadingElement = document.getElementById('archiveBookingsLoading');
                const archiveBookingsTableWrapper = document.querySelector('#bookings .table-wrapper ~ .table-wrapper'); // –í—Ç–æ—Ä–∞—è —Ç–∞–±–ª–∏—Ü–∞
                const archiveBookingsTableElement = archiveBookingsTableWrapper ? archiveBookingsTableWrapper.querySelector('table') : null;

                if (archiveBookingsLoadingElement) {
                    archiveBookingsLoadingElement.style.display = 'block';
                }
                if (archiveBookingsTableElement) {
                    archiveBookingsTableElement.style.display = 'none';
                }

                // –û–±–Ω–æ–≤–ª—è–µ–º –∫—ç—à —Å–µ–∞–Ω—Å–æ–≤
                await loadAllSeances();
                // –ó–∞–≥—Ä—É–∂–∞–µ–º –≤—Å–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
                const querySnapshot = await db.collection('bookings').get();
                // –§–∏–ª—å—Ç—Ä—É–µ–º —Ç–æ–ª—å–∫–æ –∞—Ä—Ö–∏–≤–Ω—ã–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è (–Ω–µ—Å—É—â–µ—Å—Ç–≤—É—é—â–∏–µ —Å–µ–∞–Ω—Å—ã)
                const archiveBookings = [];
                for (const doc of querySnapshot.docs) {
                    const booking = doc.data();
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ —É –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –µ—Å—Ç—å –≤—Å–µ –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –¥–∞–Ω–Ω—ã–µ
                    if (booking.film && booking.date && booking.time) {
                        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –ù–ï —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–∏ —Å–µ–∞–Ω—Å
                        if (!seanceExists(booking.film, booking.date, booking.time)) {
                            archiveBookings.push({
                                id: doc.id,
                                ...booking
                            });
                        }
                    }
                }
                // –°–æ—Ä—Ç–∏—Ä—É–µ–º –ø–æ –¥–∞—Ç–µ –∏ –≤—Ä–µ–º–µ–Ω–∏
                archiveBookings.sort((a, b) => {
                    if (a.date !== b.date) {
                        return a.date.localeCompare(b.date);
                    }
                    if (a.time && b.time) {
                        return a.time.localeCompare(b.time);
                    }
                    return 0;
                });
                const archiveTableBody = document.getElementById('archiveBookingsTableBody');
                if (!archiveTableBody) {
                     console.error("–≠–ª–µ–º–µ–Ω—Ç —Å id 'archiveBookingsTableBody' –Ω–µ –Ω–∞–π–¥–µ–Ω");
                     return;
                }
                archiveTableBody.innerHTML = '';
                if (archiveBookings.length === 0) {
                    archiveTableBody.innerHTML = '<tr><td colspan="8" style="text-align: center;">–ù–µ—Ç –∞—Ä—Ö–∏–≤–Ω—ã—Ö –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–π</td></tr>';
                } else {
                    archiveBookings.forEach(booking => {
                        // –°–æ–∑–¥–∞–µ–º —É–Ω–∏–∫–∞–ª—å–Ω—ã–π ID –¥–ª—è —Å—Ç—Ä–æ–∫–∏
                        const rowId = `booking-${booking.id}`;
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${booking.film || '---'}</td>
                            <td>${booking.date || '---'} ${booking.time || ''}</td>
                            <td>${booking.seat || '---'}</td>
                            <td>${booking.people || '---'}</td>
                            <td>${booking.price || 0} —Ä—É–±.</td>
                            <td>${booking.customerName || '---'}</td> <!-- –ù–û–í–´–ô –°–¢–û–õ–ë–ï–¶ -->
                            <td>${booking.customerPhone || '---'}</td> <!-- –ù–û–í–´–ô –°–¢–û–õ–ë–ï–¶ -->
                            <td>
                                <button class="delete-booking-btn" onclick="deleteBooking('${booking.id}', false)">–£–¥–∞–ª–∏—Ç—å</button>
                            </td>
                        `;
                        // –î–µ–ª–∞–µ–º —Å—Ç—Ä–æ–∫—É –∫–ª–∏–∫–∞–±–µ–ª—å–Ω–æ–π –∏ –ø–µ—Ä–µ–¥–∞–µ–º ID –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –¥–ª—è –≤—ã–¥–µ–ª–µ–Ω–∏—è
                        row.id = rowId;
                        row.style.cursor = 'pointer';
                        row.title = '–ö–ª–∏–∫–Ω–∏—Ç–µ –¥–ª—è –ø—Ä–æ—Å–º–æ—Ç—Ä–∞ —Å—Ö–µ–º—ã –∑–∞–ª–∞';
                        row.addEventListener('click', (e) => {
                            // –ò–≥–Ω–æ—Ä–∏—Ä—É–µ–º –∫–ª–∏–∫, –µ—Å–ª–∏ –æ–Ω –±—ã–ª –ø–æ –∫–Ω–æ–ø–∫–µ —É–¥–∞–ª–µ–Ω–∏—è
                            if (e.target.classList.contains('delete-booking-btn')) {
                                return;
                            }
                            // –ü–µ—Ä–µ–¥–∞–µ–º ID –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –¥–ª—è –≤—ã–¥–µ–ª–µ–Ω–∏—è –º–µ—Å—Ç–∞
                            showHallScheme(booking.film, booking.date, booking.time, booking.id);
                        });
                        archiveTableBody.appendChild(row);
                    });
                }

                if (archiveBookingsLoadingElement) {
                    archiveBookingsLoadingElement.style.display = 'none';
                }
                if (archiveBookingsTableElement) {
                    archiveBookingsTableElement.style.display = 'table';
                }
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∞—Ä—Ö–∏–≤–Ω—ã—Ö –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–π:', error);
                const archiveBookingsLoadingElement = document.getElementById('archiveBookingsLoading');
                if (archiveBookingsLoadingElement) {
                    archiveBookingsLoadingElement.innerHTML = '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏: ' + error.message;
                }
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —É–¥–∞–ª–µ–Ω–∏—è –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
        async function deleteBooking(bookingId, isActive) {
            if (confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç–æ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ?')) {
                try {
                    await db.collection('bookings').doc(bookingId).delete();
                    alert('–ë—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ —É–¥–∞–ª–µ–Ω–æ!');
                    // –ü–µ—Ä–µ–∑–∞–≥—Ä—É–∂–∞–µ–º —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â—É—é —Ç–∞–±–ª–∏—Ü—É
                    if (isActive) {
                        loadActiveBookings(currentBookingFilter);
                    } else {
                        loadArchiveBookings();
                    }
                } catch (error) {
                    console.error('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è:', error);
                    // –ë–æ–ª–µ–µ —Ç–æ—á–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –æ–± –æ—à–∏–±–∫–µ
                    if (error.code === 'permission-denied') {
                         alert('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è: –ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –ø—Ä–∞–≤. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –ø—Ä–∞–≤–∏–ª–∞ –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏ Firestore –¥–ª—è –∫–æ–ª–ª–µ–∫—Ü–∏–∏ bookings.');
                    } else {
                         alert('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è: ' + error.message);
                    }
                }
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—á–∏—Å—Ç–∫–∏ –∞—Ä—Ö–∏–≤–∞
        async function clearArchive() {
            if (confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å –≤—Å–µ –∞—Ä—Ö–∏–≤–Ω—ã–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è? –≠—Ç–æ –¥–µ–π—Å—Ç–≤–∏–µ –Ω–µ–ª—å–∑—è –æ—Ç–º–µ–Ω–∏—Ç—å.')) {
                try {
                    // –û–±–Ω–æ–≤–ª—è–µ–º –∫—ç—à —Å–µ–∞–Ω—Å–æ–≤
                    await loadAllSeances();
                    // –ó–∞–≥—Ä—É–∂–∞–µ–º –≤—Å–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
                    const querySnapshot = await db.collection('bookings').get();
                    // –§–∏–ª—å—Ç—Ä—É–µ–º —Ç–æ–ª—å–∫–æ –∞—Ä—Ö–∏–≤–Ω—ã–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è (–Ω–µ—Å—É—â–µ—Å—Ç–≤—É—é—â–∏–µ —Å–µ–∞–Ω—Å—ã)
                    const archiveBookingIds = [];
                    for (const doc of querySnapshot.docs) {
                        const booking = doc.data();
                        // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ —É –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –µ—Å—Ç—å –≤—Å–µ –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –¥–∞–Ω–Ω—ã–µ
                        if (booking.film && booking.date && booking.time) {
                            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –ù–ï —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–∏ —Å–µ–∞–Ω—Å
                            if (!seanceExists(booking.film, booking.date, booking.time)) {
                                archiveBookingIds.push(doc.id);
                            }
                        }
                    }
                    // –£–¥–∞–ª—è–µ–º –∞—Ä—Ö–∏–≤–Ω—ã–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
                    let deletedCount = 0;
                    for (const bookingId of archiveBookingIds) {
                        try {
                             await db.collection('bookings').doc(bookingId).delete();
                             deletedCount++;
                        } catch (deleteError) {
                            console.error(`–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è ${bookingId}:`, deleteError);
                            // –ù–µ –ø—Ä–µ—Ä—ã–≤–∞–µ–º —Ü–∏–∫–ª, –ø—ã—Ç–∞–µ–º—Å—è —É–¥–∞–ª–∏—Ç—å –æ—Å—Ç–∞–ª—å–Ω—ã–µ
                        }
                    }
                    alert(`–ê—Ä—Ö–∏–≤ –æ—á–∏—â–µ–Ω. –£–¥–∞–ª–µ–Ω–æ ${deletedCount} –∏–∑ ${archiveBookingIds.length} –∑–∞–ø–∏—Å–µ–π.`);
                    // –ü–µ—Ä–µ–∑–∞–≥—Ä—É–∂–∞–µ–º –∞—Ä—Ö–∏–≤–Ω—ã–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
                    loadArchiveBookings();
                } catch (error) {
                    console.error('–û—à–∏–±–∫–∞ –æ—á–∏—Å—Ç–∫–∏ –∞—Ä—Ö–∏–≤–∞:', error);
                    // –ë–æ–ª–µ–µ —Ç–æ—á–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –æ–± –æ—à–∏–±–∫–µ
                     if (error.code === 'permission-denied') {
                         alert('–û—à–∏–±–∫–∞ –æ—á–∏—Å—Ç–∫–∏ –∞—Ä—Ö–∏–≤–∞: –ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –ø—Ä–∞–≤. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –ø—Ä–∞–≤–∏–ª–∞ –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏ Firestore –¥–ª—è –∫–æ–ª–ª–µ–∫—Ü–∏–∏ bookings.');
                    } else {
                         alert('–û—à–∏–±–∫–∞ –æ—á–∏—Å—Ç–∫–∏ –∞—Ä—Ö–∏–≤–∞: ' + error.message);
                    }
                }
            }
        }

        // --- –û–±–Ω–æ–≤–ª–µ–Ω–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Å—Ö–µ–º—ã –∑–∞–ª–∞ —Å –≤—ã–¥–µ–ª–µ–Ω–∏–µ–º –º–µ—Å—Ç–∞ ---
        async function showHallScheme(film, date, time, bookingIdToHighlight = null) {
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º ID –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –¥–ª—è –≤—ã–¥–µ–ª–µ–Ω–∏—è
            currentHighlightedBookingId = bookingIdToHighlight;

            const modal = document.getElementById('hallSchemeModal');
            const container = document.getElementById('hallSchemeContainer');
            const info = document.getElementById('hallModalInfo');
            if (!modal || !container || !info) {
                 console.error("–û–¥–∏–Ω –∏–ª–∏ –Ω–µ—Å–∫–æ–ª—å–∫–æ —ç–ª–µ–º–µ–Ω—Ç–æ–≤ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ —Å—Ö–µ–º—ã –∑–∞–ª–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã");
                 return;
            }
            // –û—á–∏—â–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
            container.innerHTML = '<p>–ó–∞–≥—Ä—É–∑–∫–∞ —Å—Ö–µ–º—ã –∑–∞–ª–∞...</p>';
            // –û—Ç–æ–±—Ä–∞–∂–∞–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —Å–µ–∞–Ω—Å–µ
            info.textContent = `–§–∏–ª—å–º: ${film} | –î–∞—Ç–∞: ${date} | –í—Ä–µ–º—è: ${time}`;
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
            modal.style.display = 'block';
            try {
                // –ó–∞–≥—Ä—É–∂–∞–µ–º –≤—Å–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –¥–ª—è —ç—Ç–æ–≥–æ —Å–µ–∞–Ω—Å–∞
                const bookingsSnapshot = await db.collection('bookings')
                    .where('film', '==', film)
                    .where('date', '==', date)
                    .where('time', '==', time)
                    .get();
                const bookings = [];
                bookingsSnapshot.forEach(doc => {
                    bookings.push({ id: doc.id, ...doc.data() });
                });
                // –°–æ–∑–¥–∞–µ–º —Å—Ö–µ–º—É –∑–∞–ª–∞
                let hallHTML = `
                    <div class="hall-modal-screen">–≠–ö–†–ê–ù</div>
                `;
                // –û–ø—Ä–µ–¥–µ–ª—è–µ–º —Å—Ç—Ä—É–∫—Ç—É—Ä—É –∑–∞–ª–∞ (—Ç–∞–∫–∞—è –∂–µ, –∫–∞–∫ –≤ hall.html)
                const hallStructure = [
                    { row: 1, seats: 8, type: 'single' },
                    { row: 2, seats: 5, type: 'double' },
                    { row: 3, seats: 6, type: 'double' },
                    { row: 4, seats: 6, type: 'double' },
                    { row: 5, seats: 6, type: 'mixed', details: ['quad', 'double', 'double', 'double', 'double', 'quad'] },
                    { row: 6, seats: 5, type: 'mixed', details: ['quad', 'double', 'double', 'double', 'quad'] }
                ];
                hallStructure.forEach(rowData => {
                    hallHTML += `<div class="hall-modal-row">`;
                    hallHTML += `<div class="hall-modal-row-label">${rowData.row}</div>`;
                    if (rowData.type === 'single') {
                        for (let i = 1; i <= rowData.seats; i++) {
                            const seatId = `${rowData.row}-${i}`;
                            const booking = bookings.find(b => b.seat === seatId);
                            const isBooked = !!booking;
                            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –∫–ª–∞—Å—Å—ã –¥–ª—è –º–µ—Å—Ç–∞
                            let seatClasses = `hall-modal-seat hall-modal-single`;
                            if (isBooked) {
                                seatClasses += ` booked`;
                                if (booking.id === currentHighlightedBookingId) {
                                    seatClasses += ` highlighted`; // –î–æ–±–∞–≤–ª—è–µ–º –∫–ª–∞—Å—Å –≤—ã–¥–µ–ª–µ–Ω–∏—è
                                }
                            }
                            hallHTML += `<div class="${seatClasses}" data-seat="${seatId}" ${isBooked ? `data-booking-id="${booking.id}"` : ''} ${isBooked ? 'onclick="showBookingInfo(this)"' : ''} ${isBooked ? 'title="–ó–∞–±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–æ"' : ''} ${isBooked ? 'style="background-color: #ff4444;"' : ''}>${i}</div>`;
                        }
                    } else if (rowData.type === 'double') {
                        for (let i = 1; i <= rowData.seats; i++) {
                            const seatId = `${rowData.row}-${i}`;
                            const booking = bookings.find(b => b.seat === seatId);
                            const isBooked = !!booking;
                            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –∫–ª–∞—Å—Å—ã –¥–ª—è –º–µ—Å—Ç–∞
                            let seatClasses = `hall-modal-seat hall-modal-double`;
                            if (isBooked) {
                                seatClasses += ` booked`;
                                if (booking.id === currentHighlightedBookingId) {
                                    seatClasses += ` highlighted`; // –î–æ–±–∞–≤–ª—è–µ–º –∫–ª–∞—Å—Å –≤—ã–¥–µ–ª–µ–Ω–∏—è
                                }
                            }
                            hallHTML += `<div class="${seatClasses}" data-seat="${seatId}" ${isBooked ? `data-booking-id="${booking.id}"` : ''} ${isBooked ? 'onclick="showBookingInfo(this)"' : ''} ${isBooked ? 'title="–ó–∞–±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–æ"' : ''} ${isBooked ? 'style="background-color: #ff4444;"' : ''}>${rowData.row}-${i}</div>`;
                        }
                    } else if (rowData.type === 'mixed') {
                        rowData.details.forEach((seatType, index) => {
                            const seatId = `${rowData.row}-${index + 1}`;
                            const booking = bookings.find(b => b.seat === seatId);
                            const isBooked = !!booking;
                            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –∫–ª–∞—Å—Å—ã –¥–ª—è –º–µ—Å—Ç–∞
                            let seatClasses = `hall-modal-seat hall-modal-${seatType}`;
                            if (isBooked) {
                                seatClasses += ` booked`;
                                if (booking.id === currentHighlightedBookingId) {
                                    seatClasses += ` highlighted`; // –î–æ–±–∞–≤–ª—è–µ–º –∫–ª–∞—Å—Å –≤—ã–¥–µ–ª–µ–Ω–∏—è
                                }
                            }
                            if (seatType === 'single') {
                                hallHTML += `<div class="${seatClasses}" data-seat="${seatId}" ${isBooked ? `data-booking-id="${booking.id}"` : ''} ${isBooked ? 'onclick="showBookingInfo(this)"' : ''} ${isBooked ? 'title="–ó–∞–±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–æ"' : ''} ${isBooked ? 'style="background-color: #ff4444;"' : ''}>${index + 1}</div>`;
                            } else if (seatType === 'double') {
                                hallHTML += `<div class="${seatClasses}" data-seat="${seatId}" ${isBooked ? `data-booking-id="${booking.id}"` : ''} ${isBooked ? 'onclick="showBookingInfo(this)"' : ''} ${isBooked ? 'title="–ó–∞–±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–æ"' : ''} ${isBooked ? 'style="background-color: #ff4444;"' : ''}>${rowData.row}-${index + 1}</div>`;
                            } else if (seatType === 'quad') {
                                hallHTML += `<div class="${seatClasses}" data-seat="${seatId}" ${isBooked ? `data-booking-id="${booking.id}"` : ''} ${isBooked ? 'onclick="showBookingInfo(this)"' : ''} ${isBooked ? 'title="–ó–∞–±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–æ"' : ''} ${isBooked ? 'style="background-color: #ff4444;"' : ''}>${rowData.row}-${index + 1}</div>`;
                            }
                        });
                    }
                    hallHTML += `</div>`;
                });
                container.innerHTML = hallHTML;
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ö–µ–º—ã –∑–∞–ª–∞:', error);
                container.innerHTML = '<p style="color: #ff6b6b;">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ö–µ–º—ã –∑–∞–ª–∞: ' + error.message + '</p>';
            }
        }
        // --- –ö–æ–Ω–µ—Ü –æ–±–Ω–æ–≤–ª–µ–Ω–Ω–æ–π —Ñ—É–Ω–∫—Ü–∏–∏ –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Å—Ö–µ–º—ã –∑–∞–ª–∞ ---

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ —Å—Ö–µ–º—ã –∑–∞–ª–∞
        function closeHallSchemeModal() {
            const modal = document.getElementById('hallSchemeModal');
            if (modal) {
                modal.style.display = 'none';
            }
            // –û—á–∏—â–∞–µ–º ID –≤—ã–¥–µ–ª–µ–Ω–∏—è –ø—Ä–∏ –∑–∞–∫—Ä—ã—Ç–∏–∏
            currentHighlightedBookingId = null;
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–∏
        async function showBookingInfo(seatElement) {
            const bookingId = seatElement.dataset.bookingId;
            if (!bookingId) return;
            const infoModal = document.getElementById('bookingInfoModal');
            const infoContent = document.getElementById('bookingInfoContent');
            if (!infoModal || !infoContent) {
                 console.error("–û–¥–∏–Ω –∏–ª–∏ –Ω–µ—Å–∫–æ–ª—å–∫–æ —ç–ª–µ–º–µ–Ω—Ç–æ–≤ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–∏ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã");
                 return;
            }
            try {
                // –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–∞–Ω–Ω—ã–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –∏–∑ Firestore
                const bookingDoc = await db.collection('bookings').doc(bookingId).get();
                if (!bookingDoc.exists) {
                    infoContent.innerHTML = '<p style="color: #ff6b6b;">–ë—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ</p>';
                    infoModal.style.display = 'block';
                    return;
                }
                const booking = bookingDoc.data();
                // –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º –¥–∞—Ç—É –∏ –≤—Ä–µ–º—è –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è, –µ—Å–ª–∏ –µ—Å—Ç—å
                let bookingTimeStr = '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ';
                if (booking.bookingTimestamp) {
                    try {
                        const bookingDate = booking.bookingTimestamp.toDate ? booking.bookingTimestamp.toDate() : new Date(booking.bookingTimestamp);
                        bookingTimeStr = bookingDate.toLocaleString('ru-RU');
                    } catch (e) {
                        console.error("–û—à–∏–±–∫–∞ —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –¥–∞—Ç—ã –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è:", e);
                    }
                }
                // –û—Ç–æ–±—Ä–∞–∂–∞–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é
                infoContent.innerHTML = `
                    <p><strong>–§–∏–ª—å–º:</strong> ${booking.film || '---'}</p>
                    <p><strong>–î–∞—Ç–∞/–í—Ä–µ–º—è:</strong> ${booking.date || '---'} ${booking.time || ''}</p>
                    <p><strong>–ú–µ—Å—Ç–æ:</strong> ${booking.seat || '---'}</p>
                    <p><strong>–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —á–µ–ª–æ–≤–µ–∫:</strong> ${booking.people || '---'}</p>
                    <p><strong>–°—Ç–æ–∏–º–æ—Å—Ç—å:</strong> ${booking.price || 0} —Ä—É–±.</p>
                    <p><strong>–ò–º—è:</strong> ${booking.customerName || '---'}</p>
                    <p><strong>–¢–µ–ª–µ—Ñ–æ–Ω:</strong> ${booking.customerPhone || '---'}</p>
                    <p><strong>–í—Ä–µ–º—è –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è:</strong> ${bookingTimeStr}</p>
                    <button class="delete-booking-btn" style="margin-top: 15px;" onclick="deleteBookingFromModal('${bookingId}')">–£–¥–∞–ª–∏—Ç—å –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ</button>
                `;
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –º–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ
                infoModal.style.display = 'block';
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–∏:', error);
                infoContent.innerHTML = '<p style="color: #ff6b6b;">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏: ' + error.message + '</p>';
                infoModal.style.display = 'block';
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —É–¥–∞–ª–µ–Ω–∏—è –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è –∏–∑ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏
        async function deleteBookingFromModal(bookingId) {
            closeBookingInfoModal();
            closeHallSchemeModal();
            await deleteBooking(bookingId, true); // –ü—Ä–µ–¥–ø–æ–ª–∞–≥–∞–µ–º, —á—Ç–æ —ç—Ç–æ –∞–∫—Ç–∏–≤–Ω–æ–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–∏
        function closeBookingInfoModal() {
            const infoModal = document.getElementById('bookingInfoModal');
            if (infoModal) {
                infoModal.style.display = 'none';
            }
        }

        // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω—ã—Ö –æ–∫–æ–Ω –∫–ª–∏–∫–æ–º –≤–Ω–µ –∏—Ö
        window.onclick = function(event) {
            const hallModal = document.getElementById('hallSchemeModal');
            const infoModal = document.getElementById('bookingInfoModal');
            if (event.target === hallModal) {
                closeHallSchemeModal();
            }
            if (event.target === infoModal) {
                closeBookingInfoModal();
            }
        }
    </script>
</body>
</html>
